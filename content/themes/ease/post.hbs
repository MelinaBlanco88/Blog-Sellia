{{!< default}}

<main class="site-main">

    {{#post}}

            <aside class="gh-sidebar">
            {{> share-block}}

            <div class="gh-toc"></div>
            </aside> {{! The TOC will be inserted here }}

    <article class="{{post_class}} post-padding-left">

        <header class="gh-article-header gh-canvas">
            <h1 class="gh-article-title">{{title}}</h1>
            <div class="post-meta">
                Actualizado en &nbsp;
                <time datetime="{{date format="YYYY-MM-DD"}}">{{date updated_at}}</time>
            </div>
            {{> "post-image"}}
        </header>

        <div class="gh-content gh-canvas">


            {{content}}
        </div>

        <div class="pagination-container gh-canvas">
        <nav class="pagination">

            <div class="pagination-left">
                {{#prev_post}}
                    <a class="newer-posts" href="{{url}}">
                        <span class="pagination-label">
                            <svg class="chevron-down" width="30" height="30" transform="rotate(180)" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" fill="currentColor">
                                <path d="M11.453 22.107L17.56 16l-6.107-6.12L13.333 8l8 8-8 8-1.88-1.893z"></path>
                            </svg>
                        </span>
                        <span class="pagination-title">{{title}}</span>
                    </a>
                {{/prev_post}}
            </div>

            <div class="pagination-right">
                {{#next_post}}
                    <a class="older-posts" href="{{url}}">
                        <span class="pagination-label">
                            <svg class="chevron-down" width="30" height="30" transform="rotate(0)" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" fill="currentColor">
                                <path d="M11.453 22.107L17.56 16l-6.107-6.12L13.333 8l8 8-8 8-1.88-1.893z"></path>
                            </svg>
                        </span>
                        <span class="pagination-title">{{title}}</span>
                    </a>
                {{/next_post}}
            </div>

        </nav>
        </div>

        {{#if comments}}
            <div class="gh-comments gh-canvas">
                {{comments}}
            </div>
        {{/if}}

    </article>

    {{/post}}

</main>